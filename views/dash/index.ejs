<% var cookie_accept = cookie_accept %>
<style media="screen">
  body {
    width: 100vw;
    margin: 0
  }
  .dash_table {
    border-spacing: 0;
    color: #FFF;
    background-color: #2295A7;
    margin: 20px auto;
    width: 300px;
    border: 2px solid #000;
  }
  .dash_table td {
    padding: 15px;
    font-size: 1.3em;
    border: 2px solid #000;
  }
  .dash_table a {
    color: black;
    text-decoration: none;
  }
  .dash_table a:hover {
    font-weight: bold;
  }
  #edit_user {
    max-width: 50vw;
  }
  #undo >input {
    display: block;
    margin: auto;
    font-size: 20px;
  }
</style>
        <!--Section Starts -->
        <section id="menu" class="section-area inverse menu-card-section parallax">
            <!-- Nested Container Starts -->
            <div class="container">
                <!-- Heading Starts -->
                <h1 class="section-main-heading inverse text-center"><span>Welcome, <%= user.name %>!</span></h1>
                <!-- Heading Ends -->
                <!-- Spacer Starts -->
                <div class="spacer-small"></div>
                <!-- Spacer Ends -->
                <!-- Nested Row Starts -->
                <div class="row">
                    <!-- Left Col Starts -->
                    <div class="col-sm-4 col-xs-12">
                        <div id="greeting_menu" class="user_div">
<table class="dash_table">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td>Delete User</td>
    </tr>
  </thead>
  <tbody>
    <% for (var i = 0; i < all_users.length; i++) { %>
      <tr><td><%= all_users[i].name %></td><td><%= all_users[i].email %></td><td><a href="/dash/<%= all_users[i].id %>/delete">DELETE</a></td></tr>
    <% } %>
  </tbody>
</table>
<% if (cookie_accept) { %>
  <table class="dash_table">
    <thead>
      <tr>
        <td>Meal</td>
        <td>Suggested By</td>
        <td>Accept</td>
      </tr>
    </thead>
    <tbody>
      <% for (var i = 0; i < suggestions.length; i++) { %>
        <tr><td><%= suggestions[i].meal_name %></td><td><%= users_name[i].name %></td><td>Meal Already Selected</td></tr>
      <% } %>
    </tbody>
  </table>
  <form id="undo" action="/dash/undo" method="post">
    <input type="hidden" value="<%= user.id %>" name="id">
    <input type="submit" value="Undo" name="submit">
  </form>
<% } else { %>
  <table class="dash_table">
    <thead>
      <tr>
        <td>Meal</td>
        <td>Suggested By</td>
        <td>Accept</td>
      </tr>
    </thead>
    <tbody>
      <% for (var i = 0; i < suggestions.length; i++) { %>
        <tr><td><%= suggestions[i].meal_name %></td><td><%= users_name[i].name %></td><td><form action="/dash/<%= suggestions[i].id %>/accepted" method="post"><input type="submit" value="Accept"></form></td></tr>
      <% } %>
    </tbody>
  </table>
<% } %>
  <div id="edit_user" class="user_div">
    <h2>Edit User Info</h2>
    <form action="/dash/<%= user.id %>/edit" method="post">
      <label for="name">Name: </label>
      <input type="text" name="name" class="user_input" value="<%= user.name %>">
      <label for="email">Email: </label>
      <input type="text" name="email" class="user_input" value="<%= user.email %>">
      <label for="about">About: </label>
      <textarea name="about" rows="3" cols="80" class="user_input"><%= user.about %></textarea>
      <input type="submit" name="edit" value="Edit" class="user_input">
    </form>
  </div>
</div>
</ul>
</div>
<!-- Right Col Ends -->
</div>
<!-- Nested Row Ends -->
</div>
<!-- Nested Container Ends -->
</section>
